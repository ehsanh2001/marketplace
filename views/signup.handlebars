{{> hero_image }}
{{> map_modal }}

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-4">
      <h2>Sign Up</h2>
      <form id="signup-form" action="#" method="post">
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" class="form-control" id="username" name="username" required>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" id="password" name="password" required>
        </div>
        <div class="form-group">
          <label for="re_password">Retype Password</label>
          <input type="password" class="form-control" id="re_password" name="re_password" required>
        </div>
        <div class="form-group">
          <label for="phone_email">Phone/Email</label>
          <input type="text" class="form-control" id="phone_email" name="phone_email" required>
        </div>
        <div class="form-group d-grid gap-2 d-block">
          <label for="search-location">Address</label>
          <button
            id="search-location"
            type="button"
            class="btn btn-light d-flex align-items-center justify-content-center"
            data-bs-toggle="modal"
            data-bs-target="#mapModal"
          >
            <span class="material-symbols-outlined"> location_searching </span>
            &nbsp &nbsp Map
          </button>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Sign Up</button>
      </form>
    </div>
  </div>
  </div>
  

  <script src="/js/signup.js"></script>