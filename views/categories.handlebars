<style>
  .item img { object-fit: contain; width: 100%; height: 100%; border-radius:
  50%; display: inline; }

</style>

{{> search_bar }}
{{> hero_image }}
<div class="container">
  <h1 class="my-3">Categories</h1>
  <div class="row">
    {{#each categories}}
      <div class="col-12 col-md-3 col-lg-2 mb-5">
        <div class="col-12">
          <div class="item">
            <a href="#">
              <img
                src="/api/categories/image/{{this.name}}"
                alt="{{this.name}}"
              />
            </a>
          </div>
          <div class="col-12 text-center">
            <h3>{{this.name}}</h3>
          </div>
        </div>
      </div>

    {{/each}}
  </div>
</div>